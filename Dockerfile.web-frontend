FROM golang:1.21-alpine AS builder

WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN go build -o web-frontend ./cmd/web-frontend

FROM alpine:latest
RUN apk --no-cache add ca-certificates
WORKDIR /root/

COPY --from=builder /app/web-frontend .
COPY --from=builder /app/web ./web

EXPOSE 8080
CMD ["./web-frontend"]